{
  "version": "0.2.0",
  "configurations": [
    //前端代码调试
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend:DEV (Vite)",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/frontend",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/frontend/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    //谷歌游览器调试
    {
      "type": "chrome",
      "request": "launch",
      "name": "Frontend:DEBUG (Chrome)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "preLaunchTask": "Frontend:Start Dev Server"
    }
  ]
}
